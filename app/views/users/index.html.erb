<%= stylesheet_link_tag 'style.css' %>

<div class="fondo">
    <%= render "/home/menu_lateral"%>

    <div class="encabezadoSupervisores">
        <h1 class="titulo_seccion"> Supervisores </h1>
        <%= link_to crear_super_path do %>
            <%= image_tag "plus.svg", class:"ag_super" %>    
        <% end %>
    </div> <br>
    <div class="lineahorizontal"></div>

    <table class="listado">
        
        <ul class="listado">
        <% User.all.each do |user| %>
            <% if user.super %>
                <li class="listado_item">
                    <%= link_to supervisores_path( user.id ) do %>
                    <h2><FONT COLOR="#e7c078"><%= user.nombreUsuario %></h2>
                    <% end %>
                    <div class="lineahorizontal"></div>
                </li>  
            <% end %>
        <% end %>
        </ul>

    </table>
</div>