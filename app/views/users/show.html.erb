     <% end %>

   <center>
   <h3> Nombre: <%= User.find(@user.id).nombreUsuario %></h3>
   <h3> Email: <%= @user.email %></h3>
   <h3> DNI: <%= @user.dni %> </h3>
   <h3> Supervisor: <%= @user.super %></h3>

   <%if current_user && current_user.admin%>
     <%= button_to 'Modificar', editar_super_path(@user), :method => :get, class:"boton" %><br>
     <%= button_to 'Eliminar', eliminar_super_path(@user), :method => :delete, class:"boton",  data: {
      turbo_method: :delete,
