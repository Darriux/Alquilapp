  <h2>Iniciar Sesión</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"E-mail", class:"ingreso" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder:"Contraseña", class:"ingreso" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Recordar Sesión" %>
      </div>
    <% end %>

    <div class="actions">
      <br>
      <%= f.submit "Iniciar Sesión", class:"boton" %>
    </div>
  <% end %>
</div>
