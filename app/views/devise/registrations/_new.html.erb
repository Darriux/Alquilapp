<%= stylesheet_link_tag 'style.css' %>
<% provide :head_tags do %>
    <meta name='turbolinks-visit-control' content='reload'>
    <script>
        document.addEventListener("DOMContentLoaded", initMap2);
    </script>
<% end %>
<div class="sesion">

    <h2>Crear Cuenta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :nombreUsuario, autofocus: true, placeholder:"Nombre de Usuario", class:"ingreso", :required => true %>
    </div>

    <script>
      navigator.geolocation.getCurrentPosition((pos) => {document.querySelector("#location_point").value =`${pos.coords.latitude},${pos.coords.longitude}`;});
    </script>

    <div class="field">
      <%= f.hidden_field :latitud %>
    </div>
    <div class="field">
      <%= f.hidden_field :longitud %>
    </div>

    <div class="field">
      <%= f.number_field :dni, autofocus: true, placeholder:"DNI", class:"ingreso", :required => true %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"E-mail", class:"ingreso" %>
    </div>

    <div class="field">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"Constraseña", class:"ingreso" %>
    </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirmar contraseña", class:"ingreso" %>
      </div>

      <div class="field">
        <%= f.hidden_field :estadoDocumentos, value:"pendiente" %>
      </div>

      <div class="actions">
        <br>
        <%= f.submit "Crear Cuenta", class:"boton" %>
      </div>
    <% end %>
</div>
